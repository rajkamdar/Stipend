<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="app.stipend.Signup_Company"
    android:id="@+id/signupcompanies">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="COMPANY DETAILS"
                android:id="@+id/signup_cdetails"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textColor="#00868B"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/signup_cname"
                android:layout_below="@+id/signup_cdetails"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:hint="Company Name"
                android:textColor="#838B8B"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/signup_location"
                android:layout_below="@+id/signup_cpwd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Address"
                android:textColor="#838B8B"
                android:lines="2" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/signup_cmno"
                android:layout_below="@+id/signup_location"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Mobile Number"
                android:textColor="#838B8B"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/signup_mno1"
                android:layout_below="@+id/signup_cmno"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Company Number"
                android:textColor="#838B8B"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/signup_website"
                android:layout_below="@+id/signup_mno1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Website"
                android:textColor="#838B8B"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/signup_aboutcompany"
                android:layout_below="@+id/signup_website"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="About Company"
                android:textColor="#838B8B"
                android:lines="2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/cregister"
                android:layout_below="@+id/signup_aboutcompany"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="#00868B" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/signup_cemail"
                android:layout_below="@+id/signup_cname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Email"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/signup_cpwd"
                android:layout_below="@+id/signup_cemail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="******"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
